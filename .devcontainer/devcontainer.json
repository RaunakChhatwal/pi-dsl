{
  "name": "pi-dsl",
  "image": "debian:trixie",
  "remoteUser": "dev",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "dev",
      "userUid": "1000"
    },
    // "ghcr.io/devcontainers/features/python:1": {
    //   "version": "3.12"
    // },
    "ghcr.io/devcontainers/features/nix:1": {
      "packages": "direnv, neovim, git, fd, ripgrep, file",
      "extraNixConfig": "experimental-features = nix-command flakes"
    },
    "./features/misc": {}
  },
  "postCreateCommand": "sh /workspaces/pi-dsl/.devcontainer/init.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "haskell.haskell",
        // "ms-python.python",
        "mkhl.direnv",
        "bbenoist.nix"
      ],
      "settings": {
        "editor.rulers": [100],
        "workbench.editor.enablePreview": false,
        "files.autoSave": "off",
        "direnv.path.executable": "/home/dev/.nix-profile/bin/direnv",
        "editor.fontSize": 12
      }
    }
  }
}
